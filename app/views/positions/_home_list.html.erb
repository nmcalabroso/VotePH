<section>
  <% if user_signed_in? %>
<% end %>

<% if @positions.size > 0 %>

  <% @positions.each do |position| %>
    <section class="candidates-row">
      <h2 class="text-center"><%= position.name %></h2>
      <% if position.candidates.size > 0 %>
          <% sorted_candidates = position.candidates.sort_by { |candidate| candidate.votes.size } %>
          <% sorted_candidates.reverse.each do |candidate| %>
            <div class="large-4 medium-6 columns">
                <!-- <div class="row"> -->
                  <!-- <div class="large-6 medium-6 columns thumbnail"></div> -->
                  <img src="http://41.media.tumblr.com/0a049264fba0072a818f733a6c533578/tumblr_mqvlz4t5FK1qcnibxo1_540.png" alt="" class="large-6 medium-6 columns thumbnail"/>
                  <div class="large-6 medium-6 columns">
                    <h3><%= link_to "#{candidate.last_name.upcase}, #{candidate.first_name}",
                                position_candidate_path(position, candidate)%></h3>
                    <blockquote class="blockquote-big">
                      <%= candidate.slogan %>
                    </blockquote>
                    <p><b><%= candidate.votes.size %></b> votes</p>
                  </div>
                <!-- </div> -->
            </div>
          <% end %>
      <% else %>
        <p class="text-center">
          There no candidates.
        </p>
      <% end %>
  </section>
  <% end %>

<% else %>
  <p class="text-center">
    There are no positions and candidates.
  </p>
<% end %>
</section>
