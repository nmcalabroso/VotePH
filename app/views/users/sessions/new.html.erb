<section class="row">
  <div class="desc">
    <h2>Sign In</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="field large-6 columns">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'example@example.com' %>
    </div>
  </div>

  <div class="row">
    <div class="field large-6 columns">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>

    <% if devise_mapping.rememberable? -%>
    <div class="row">
      <div class="field large-6 columns">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
    <% end -%>

    <br>
    <div class="actions">
      <%= f.submit "Login", class: 'button radius' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>

</section>
