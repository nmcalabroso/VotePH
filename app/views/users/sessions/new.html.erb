<section class="row">
  <div class="desc">
    <h2>Sign In</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="field large-6 medium-6 small-8 large-centered medium-centered small-centered columns">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, placeholder:'someone@example.com' %>
    </div>
  </div>

  <div class="row">
    <div class="field large-6 medium-6 small-8 large-centered medium-centered small-centered columns">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", placeholder:'********' %>
    </div>
  </div>

    <% if devise_mapping.rememberable? -%>
    <div class="row">
      <div class="field large-6 medium-6 small-8 large-centered medium-centered small-centered columns">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
        <br>
        <%= f.submit "Login", class: 'button radius small' %>
        <%= render "users/shared/links" %>
      </div>
    </div>
    <% end -%>
  <% end %>
</section>
