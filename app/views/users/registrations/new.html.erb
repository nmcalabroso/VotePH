<section class="row">
  <div class="desc">
    <h2 class="text-center">Sign Up</h2>
  </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="large-6 medium-6 small-centered columns">
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, placeholder: 'someone@example.com' %>
        </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <p class="subheader">(<%= @minimum_password_length %> characters minimum)</p>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", placeholder: '********' %>
        </div>

          <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: '********' %>
        </div>

          <div class="field">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, placeholder: 'Dela Cruz'%>
        </div>

          <div class="field">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, placeholder: 'Juan' %>
        </div>
      </div>

      <div class="large-6 medium-6 small-centered columns">
          <div class="field">
            <%= f.label :gender %>
            <select name="user[gender]">
              <option value="" selected="selected">Please select</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
            </select>
        </div>

          <div class="field">
            <%= f.label :birthday %>
            <div class="block">
              <%= f.date_select :birthday, start_year: 1900 %>
            </div>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit 'Sign up', class: 'button radius small'  %>
    </div>
  <% end %>
</section>
